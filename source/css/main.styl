@import "variables";
.main {
  margin-top: - $search-height;
  .main-body {
    background: $color-main-background;
    box-sizing: border-box;
    box-shadow: 0px 3px 20px 0.5px rgba(0, 0, 0, 0.19);
    border-bottom-left-radius: $corner-radius;
    border-bottom-right-radius: $corner-radius;
    display: flex;
    if (hexo-config("sidebar") == "left") {
      flex-direction: row-reverse;
    } else {
      flex-direction: row;
    }
    justify-content: space-around;
    align-items: stretch;
    flex-wrap: nowrap;
    padding: 0;
    .content {
      flex-grow: 1;
      flex-basis: 75%;
      .index-post {
        background: white;
        padding: 20px;
        margin: 10px;
        box-sizing: border-box;
        box-shadow: 0px 3px 20px 0.5px rgba(0, 0, 0, 0.19);
        img {
          max-width: 100%;
        }
        .readmore {
          display: inline-block;
          padding: 5px 20px;
          font-size: 1em;
          color: $color-link-index-button;
          text-decoration: none;
          border-radius: $corner-radius;
          transition: 1s ease-in-out;
          transform-origin: 50%;
          background: $color-link-index-button-background;
          margin: 10px;
          box-sizing: border-box;
          box-shadow: 0px 3px 20px 0.5px rgba(0, 0, 0, 0.19);
          &:hover {
            transform: rotateX(360deg);
          }
          &:active {
            top: 2px;
          }
        }
        .post-tag {
          display: inline-block;
          text-decoration: none;
          color: $color-link-index-button;
          transition: 1s ease-in-out;
          transform-origin: 50%;
          border-radius: $corner-radius;
          margin: 5px;
          padding: 3px;
          box-sizing: border-box;
          box-shadow: 0px 3px 20px 0.5px rgba(0, 0, 0, 0.19);
          &:hover {
            transform: rotateX(360deg);
          }
          &:active {
            top: 2px;
          }
        }
        .post-header {
          padding: 5px 5px;
          .post-title-link {
            display: inline-block;
            position: relative;
            text-decoration: none;
            color: $color-font;
            &::after {
              content: " ";
              position: absolute;
              width: 100%;
              height: 2px;
              bottom: 0;
              left: 0;
              background: $color-font;
              visibility: hidden;
              transform: scaleX(0);
              transition: 0.2s ease-in-out;
            }
            &:hover::after {
              visibility: visible;
              transform: scaleX(1);
            }
          }
        }
      }
    }
  }
  @media (max-width: 768px) {
    .main-body {
      flex-direction: column;
    }
  }
}
