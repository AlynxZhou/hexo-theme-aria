      margin-top: -0.25em;
      width: 0.5em;
      height: 0.5em;
      background: $grey;
      border-radius: 50%;
    }
  }
  .archive-year {
    position: relative;
    padding-left: 1em;
    font-size: 1.8em;
    // margin: 0.5em;
    // box-sizing: border-box;
    // box-shadow: 0 0.075em 1em 0.25em rgba(0, 0, 0, 0.19);
    // &::before {
    //   content: " ";
    //   position: absolute;
    //   top: -50%;
    //   left: 0;
    //   margin-left: -0.125em;
    //   width: 0.25em;
    //   height: 200%;
    //   background: $grey-light;
    // }
    &::after {
      content: " ";
      position: absolute;
      left: 0;
      top: 50%;
      margin-left: -0.25em;
      margin-top: -0.25em;
      width: 0.5em;
      height: 0.5em;
      background: $grey;
      border-radius: 50%;
    }
  }
  .archive-post {
    background: white;
    position: relative;
    padding-left: 1em;
    padding-right: 0.5em;
    font-size: 1.5em;
    // margin: 0.5em;
    box-sizing: border-box;
    box-shadow: 0 0.075em 1em 0.25em rgba(0, 0, 0, 0.19);
    .post-title {
      padding: 0.25em 0;
    }
    // &::before {
    //   content: " ";
    //   position: absolute;
    //   top: -50%;
    //   left: 0;
    //   margin-left: -0.125em;
    //   width: 0.25em;
    //   height: 200%;
    //   background: $grey-light;
    // }
    &::after {
      content: " ";
      position: absolute;
      left: 0;
      top: 50%;
      margin-left: -0.25em;
      margin-top: -0.25em;
      width: 0.5em;
      height: 0.5em;
      background: $grey;
      border-radius: 50%;
    }
    .post-date {
      font-size: 0.8em;
      color: $color-link;
    }
    .post-title-link {
      display: inline-block;
      position: relative;
      text-decoration: none;
      color: $color-link;
      border-bottom: 0.05em dashed $grey;
      transition: 0.3s ease-in-out;
      &:hover {
        color: $color-link-hover;
        border-bottom: 0.03em solid $color-link-hover;
      }
      &:active {
        top: 0.1em;
      }
    }
  }
}
