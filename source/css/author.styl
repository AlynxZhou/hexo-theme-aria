@import "variables";
.author {
  padding-top: 2em;
  text-align: center;
  .author-avatar {
    max-width: 70%;
    display: block;
    margin: 0 auto;
    border: 2px solid $blue;
    border-radius: 50%;
    box-shadow: inset 0 -1px 0 #333;
    transition: 1s ease-in-out;
    &:hover {
      transform: rotateY(720deg);
    }
  }
  .author-name {
    color: $color-author-name;
    font-size: 1.5em;
  }
  .author-description {
    color: $color-author-description;
    font-size: 1.2em;
  }
}
