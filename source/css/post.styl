@import "variables";
@import "nib";
@import "reward";
.post {
  .post-header {
    text-align: center;
    .post-title-simple {
      margin: 0;
    }
    .post-title .post-title-link {
      display: inline-block;
      position: relative;
      text-decoration: none;
      border-bottom: none;
      color: $color-font;
      &::after {
        content: " ";
        position: absolute;
        width: 100%;
        height: 0.1em;
        bottom: 0;
        left: 0;
        background: $color-font;
        visibility: hidden;
        transform: scaleX(0);
        transition: 0.3s ease-in-out;
      }
      &:hover {
        &::after {
          visibility: visible;
          transform: scaleX(1);
        }
      }
      &:active {
        top: 0.1em;
      }
    }
    .post-meta span {
      margin: 0 0.1em;
    }
  }
  .post-main {
    a.headerlink {
      border: none;
      &:hover {
        border: none;
      }
      &:active {
        top: 0;
      }
      &::before {
        content: "#";
        margin-right: 0.3em;
      }
    }
    .caption {
      color: $color-quote;
      display: block;
      text-align: center;
      margin: 0 0 1em 0;
    }
  }
  .post-footer {
    text-align: center;
    .post-tags .post-tag {
      position: relative;
      margin: 0.5em;
      display: inline-block;
      text-decoration: none;
      color: $color-button-font;
      padding: 0.15em;
      line-height: 1.2em;
      &:active {
        top: 0.1em;
      }
    }
  }
}
