@import "variables";
@import "nib";
@import "info";
@import "toc";
.sidebar {
  background: $color-sidebar-background;
  flex: 1 0 auto;
  width: 25%;
  padding: 0;
  word-wrap: break-word;
  .search {
    height: $search-height - $search-padding-top;
    display: block;
    text-align: center;
    background: $color-search-background;
    color: $color-search-font;
    padding-top: $search-padding-top;
    input {
      width: 70%;
      height: 1.8em;
      border: 0.1em solid transparent;
      border-bottom: 0.1em dotted $color-search-font;
      background: $color-search-background;
      color: $color-search-font;
      transition: 0.3s ease-in-out;
      &:focus {
        outline: none;
        border-bottom: 0.1em solid $color-search-font;
      }
      &::placeholder {
        color: $color-search-font;
        opacity: 0.7;
      }
    }
  }
  .search-result-box {
    background: $color-card-background;
    word-wrap: break-word;
    transition: 0.3s ease-in-out;
    .search-result-list {
      margin-top: 0;
      padding: 1em 2em;
    }
    &:hover {
      box-shadow: 0 0.5em 1em 0.5em rgba(0, 0, 0, 0.19);
    }
  }
  .sidebar-item {
    padding: 1em 2em;
  }
  .sidebar-sticky {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
  }
  hr {
    height: 0.3em;
    border: none;
    margin: 0;
    width: 100%;
    position: relative;
    display: block;
    box-sizing: content-box;
    background: repeating-linear-gradient(-45deg, #fff, #fff 0.25em, transparent 0.25em, transparent 0.5em);
  }
  .social-link, .blogroll {
    div {
      margin: 0.5em;
    }
  }
  @media (max-width: $media-main-fold-width) {
    width: 100%;
    .social-link, .blogroll {
      text-align: center;
      ul {
        padding: 0;
        li {
          display: inline-block;
          margin: 0.5em 1em;
        }
      }
    }
    .post-toc {
      text-align: center;
      ol {
        li {
          text-align: left;
        }
      }
    }
    .sidebar-sticky {
      position: relative;
    }
  }
}
